<h2>New book</h2>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <p>タイトル</p>
  <%= f.text_field :title %>
	
  <p>本文</p>
  <%= f.text_area :body %>
	<br>
  <%= f.submit '投稿' %>
  
<% end %>
