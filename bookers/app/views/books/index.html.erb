<h1>Books</h1>

  <table>
     
   <thead>
     <tr>
     <th>Title</th>
     <th>Body</th>
     <th colspan="3"></th>
     </tr>
   </thead>
   
   <% @books.each do |book| %>
   
   <tbody>
     <tr>
       <td><%= book.title %></td>
       <td><%= book.body %></td>
       <td><a href="books/<%= book.id %>">Show</a></td>
       <td><a href="edit">Edit</a></td>
       <td><a href="destroy">Destroy</a></td>
     </tr>
   </tbody>
   <% end %>
  </table>


<h2>New book</p>

<!-- form_with部分 -->
<%= form_with model: @book do |f| %>
  <p>タイトル</p>
  <%= f.text_field :title %>
	
  <p>本文</p>
  <%= f.text_area :body %>
	<br>
  <%= f.submit '投稿' %>
  
<% end %>
